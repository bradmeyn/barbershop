---
import Layout from "../layouts/Layout.astro";
import Container from "../components/shared/Container.astro";
import { services } from "../constants";
---

<Layout title="Pricing">
  <section class="relative min-h-[400px]">
    <!-- Background Image -->
    <img
      src="/images/banner.jpg"
      class="object-cover object-center w-full h-full absolute z-0"
    />

    <!-- Overlay -->
    <div class="absolute inset-0 bg-slate-900 opacity-60 z-10"></div>

    <div class="relative z-20">
      <h1
        class="text-white z-20 text-center text-24xl md:text-7xl font-bold h-full py-32"
      >
        Price List
      </h1>
    </div>
  </section>

  <Container>
    <div class="py-20">
      <h2 class="text-4xl mb-4 font-extrabold">Services</h2>

      <div class="flex gap-3 mb-6 text-xs">
        <span
          class="bg-violet-600 py-2 px-4 rounded text-white border border-violet-800 font-bold"
          >Barber</span
        >
        <span class="py-2 px-4 rounded text-violet-800 border font-bold"
          >Salon</span
        >
      </div>

      <div class="flex flex-col md:flex-row gap-20 items-center">
        <div>
          {
            services.map((service) => (
              <div class="flex flex-col ">
                <div class="flex justify-between mb-2">
                  <h3 class="font-bold text-xl">{service.name}</h3>
                  <div class="text-xl">${service.price}</div>
                </div>
                <p class="mb-4 max-w-xl mr-10">{service.description}</p>
              </div>
            ))
          }
        </div>

        <div class="rounded h-[300px] w-full border border-purple-500">
          <img
            class="w-full h-full object-cover object-center rounded"
            src="/images/barber-shave.jpg"
            alt="Barbershop"
          />
        </div>
      </div>
    </div>
  </Container>
</Layout>
 ../constants
