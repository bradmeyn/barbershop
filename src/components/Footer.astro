---
import Section from "./shared/Section.astro";
---

<!-- Footer -->
<footer class="bg-slate-900 text-white pt-12 pb-6">
  <Section>
    <div class="container mx-auto px-6">
      <div class="">
        <!-- Logo or Branding -->
        <a href="/" class="block text-2xl mb-12">
          <div
            class="w-full text-white md:text-left text-md font-semibold flex items-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="1em"
              viewBox="0 0 512 512"
              ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
              <path
                d="M256 192l-39.5-39.5c4.9-12.6 7.5-26.2 7.5-40.5C224 50.1 173.9 0 112 0S0 50.1 0 112s50.1 112 112 112c14.3 0 27.9-2.7 40.5-7.5L192 256l-39.5 39.5c-12.6-4.9-26.2-7.5-40.5-7.5C50.1 288 0 338.1 0 400s50.1 112 112 112s112-50.1 112-112c0-14.3-2.7-27.9-7.5-40.5L499.2 76.8c7.1-7.1 7.1-18.5 0-25.6c-28.3-28.3-74.1-28.3-102.4 0L256 192zm22.6 150.6L396.8 460.8c28.3 28.3 74.1 28.3 102.4 0c7.1-7.1 7.1-18.5 0-25.6L342.6 278.6l-64 64zM64 112a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm48 240a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"
              ></path></svg
            > Neighbourhood
          </div>
        </a>

        <div class="grid grid-cols-1 md:grid-col-3 gap-10">
          <div>
            <h4 class="text-white text-2xl font-bold mb-6">Contact</h4>
            <p class="flex items-center gap-3 mb-2 text-slate-400">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 384 512"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"
                ></path></svg
              >
              <span>42 Beaumont Street, Hamilton</span>
            </p>

            <p class="flex items-center gap-3 mb-2 text-slate-400">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 512 512"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"
                ></path></svg
              ><span>neighbourhood@mail.com</span>
            </p>

            <p class="flex items-center gap-3 mb-2 text-slate-400">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 512 512"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
                ></path></svg
              ><span>02 4936 2290</span>
            </p>
          </div>

          <div class="w-[200px]">
            <h4 class="text-white text-2xl font-bold mb-6">Opening Hours</h4>
            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Mon</span>
              <span>Closed</span>
            </p>

            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Tue</span>
              <span>9am - 5pm</span>
            </p>

            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Wed</span>
              <span>9am - 5pm</span>
            </p>

            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Thur</span>
              <span>9am - 5pm</span>
            </p>

            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Fri</span>
              <span>9am - 5pm</span>
            </p>

            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Sat</span>
              <span>9am - 5pm</span>
            </p>

            <p
              class="flex justify-between gap-3 mb-2 text-slate-400 border-b border-slate-700"
            >
              <span>Sun</span>
              <span>9am - 5pm</span>
            </p>
          </div>
        </div>

        <div class="mt-20">
          <!-- Copyright -->
          <hr class="h-px my-2 bg-slate-600 border-none" />
          <div class="mt-6 text-slate-300 text-sm text-center">
            Copyright &copy; 2023 Your Company. All rights reserved.
          </div>
        </div>
      </div>
    </div>
  </Section>
</footer>

<style>
  svg {
    fill: #956ddf;
  }
</style>
