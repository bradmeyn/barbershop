---
interface Props {
  imgSrc: string;
  imgAlt: string;
}

const { imgSrc, imgAlt } = Astro.props;
---

<div class="relative h-screen">
  <!-- Background Image -->
  <img
    src={imgSrc}
    alt={imgAlt}
    class="object-cover object-center w-full h-full absolute"
  />

  <!-- Overlay -->
  <div class="absolute inset-0 bg-slate-900 opacity-70 z-10"></div>

  <!-- Content -->
  <slot />
</div>
